<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.sidiff.bug.localization.ui.menu">
         <command
               commandId="org.sidiff.bug.localization.diagram.createclassdiagram"
               icon="icons/sirius.gif"
               style="push">
         </command>
         <command
               commandId="org.sidiff.bug.localization.diagram.generateall"
               icon="icons/sirius.gif"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.bug.localization.diagram.handler.CreateClassDiagramHandler"
            commandId="org.sidiff.bug.localization.diagram.createclassdiagram">
      </handler>
      <handler
            class="org.sidiff.bug.localization.diagram.handler.GenerateAllDiagramsHandler"
            commandId="org.sidiff.bug.localization.diagram.generateall">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.sidiff.bug.localization.category"
            id="org.sidiff.bug.localization.diagram.createclassdiagram"
            name="Create Class Diagram From .uml">
      </command>
      <command
            categoryId="org.sidiff.bug.localization.category"
            id="org.sidiff.bug.localization.diagram.generateall"
            name="Generate All Class Diagrams From .json">
      </command>
   </extension>
</plugin>
